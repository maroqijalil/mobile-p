<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/item_rl_container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center">

  <ImageView
    android:id="@+id/item_c_iv_contact"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="16dp"
    android:src="@drawable/ic_baseline_contact_phone_24"
    app:tint="@color/purple_700" />

  <TextView
    android:id="@+id/item_c_tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_toEndOf="@id/item_c_iv_contact"
    android:text="Nama"
    android:textColor="@color/purple_700"
    android:textSize="20sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/item_c_tv_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/item_c_iv_contact"
    android:layout_below="@id/item_c_tv_name"
    android:text="Telepon"
    android:textSize="14sp"
    android:textStyle="bold" />

  <ImageView
    android:id="@+id/item_c_iv_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignBottom="@id/item_c_iv_contact"
    android:layout_alignTop="@id/item_c_iv_contact"
    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
    app:tint="@color/purple_700" />
</RelativeLayout>