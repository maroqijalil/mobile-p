<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingHorizontal="16dp"
  android:paddingVertical="18dp"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/main_tv_nrp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="NRP"
    android:textAppearance="?android:textAppearanceLarge" />

  <EditText
    android:id="@+id/main_et_nrp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:ems="10"
    android:inputType="textPersonName" />

  <TextView
    android:id="@+id/main_tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/main_tv_nrp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="42dp"
    android:text="Nama"
    android:textAppearance="?android:textAppearanceLarge" />

  <EditText
    android:id="@+id/main_et_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@id/main_et_nrp"
    android:layout_alignBottom="@id/main_tv_name"
    android:ems="10"
    android:inputType="textPersonName" />

  <Button
    android:id="@+id/main_btn_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/main_tv_name"
    android:layout_alignParentStart="true"
    android:layout_marginTop="54dp"
    android:text="Simpan" />

  <Button
    android:id="@+id/main_btn_get"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/main_btn_save"
    android:layout_marginStart="16dp"
    android:layout_toEndOf="@id/main_btn_save"
    android:text="Ambil Data" />

  <Button
    android:id="@+id/main_btn_update"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/main_btn_save"
    android:layout_alignParentStart="true"
    android:layout_marginTop="16dp"
    android:text="Perbarui" />

  <Button
    android:id="@+id/main_btn_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/main_btn_update"
    android:layout_marginStart="16dp"
    android:layout_toEndOf="@id/main_btn_update"
    android:text="Hapus" />
</RelativeLayout>