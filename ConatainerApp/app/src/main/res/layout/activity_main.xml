<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  android:layout_gravity="center">

  <Button
    android:id="@+id/main_btn_contact"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Buka Kontak"
    app:layout_constraintBottom_toTopOf="@id/main_btn_browser"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/main_btn_browser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Buka Browser"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/main_btn_contact"
    app:layout_constraintBottom_toTopOf="@id/main_btn_map"/>

  <Button
    android:id="@+id/main_btn_map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Buka Maps"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/main_btn_browser"/>

</androidx.constraintlayout.widget.ConstraintLayout>
