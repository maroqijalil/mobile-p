<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  android:orientation="vertical"
  android:padding="16dp"
  tools:context=".MainActivity">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="12dp"
    android:text="TUGAS PPB"
    android:textColor="@color/black"
    android:textSize="32sp"
    android:textStyle="bold" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:text="Aplikasi ini merupakan container dari aplikasi lain yang merupakan tugas dari PPB. Klik pada salah satu tombol dibawah ini untuk mengakses aplikasi sesuai dengan judul pada tombolnya" />

  <Button
    android:id="@+id/main_btn_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Buka Kontak"
    app:layout_constraintBottom_toTopOf="@id/main_btn_browser"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/main_btn_browser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Buka Browser"
    app:layout_constraintBottom_toTopOf="@id/main_btn_map"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/main_btn_contact" />

  <Button
    android:id="@+id/main_btn_map"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Buka Maps"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/main_btn_browser" />
</LinearLayout>
